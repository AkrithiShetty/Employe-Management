<!DOCTYPE html>
<html>

<head>
    <title>Employees</title>
    <link rel='stylesheet' href='/css/style-sheet.css'>
</head>

<body>
    {{>headerManager}}
    <table border="2px">
        <thead>
            <tr>
                <th>Employee ID </th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Job description</th>
                <th>Phone no</th>
                <th>Salary</th>

            </tr>
        </thead>
        <tbody>
            {{#each list}}
            <tr>
                <td>{{this.empId}}</td>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.position}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.salary}}</td>
                <td>
                    <a href="/manager/{{this._id}}">Edit</i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{>footer}}
</body>

</html>