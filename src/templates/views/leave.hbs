<!DOCTYPE html>
<html>

<head>
    <title>
        Leave
    </title>
    <link rel='stylesheet' href='/css/style-sheet.css'>
</head>

<body>
    {{>headerEmployee}}
    <div class="solid">
        <form action="/leave" method="post" autocomplete="off">
            <input type="hidden" name="_id" value="{{leave._id}}">
            <label>Employee ID : </label>
            <input type="text" name="empId" value="{{leave.empId}}"><br><br>
            <label>Name : </label>
            <input type="text" name="name" value="{{leave.name}}"><br><br>
            <label>From Date : </label>
            <input type="text" name="fromDate" placeholder="DD-MM-YYYY" value="{{leave.fromDate}}"><br><br>
            <label>To Date : </label>
            <input type="text" name="toDate" placeholder="DD-MM-YYYY" value="{{leave.toDate}}"><br><br>

            <label>Reason : </label>
            <input type="text" name="reason" value="{{leave.reason}}"><br><br>
            <label> Phone No : </label>
            <input type="number" name="phone" value="{{leave.phone}}"><br><br>

            <button> Submit</button>
        </form>
    </div>

    {{>footer}}

</body>

</html>