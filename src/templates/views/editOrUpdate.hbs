<!DOCTYPE html>
<html>

<head>
    <title>Employees</title>
    <link rel='stylesheet' href='/css/style-sheet.css'>
</head>

<body>
    {{>headerEmployee}}
    <table border="2px">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Job description</th>
                <th>Phone no</th>

            </tr>
        </thead>
        <tbody>
            {{#each list}}
            <tr t>
                <td>{{this.empName}}</td>
                <td>{{this.email}}</td>
                <td>{{this.position}}</td>
                <td>{{this.phoneNo}}</td>
                <td>
                    <a href="/edit/{{this._id}}">Update</a>
                    <a href="/edit/delete/{{this._id}}"
                        onclick="return confirm('Are you sure to delete this record ?');">Delete</a>
                </td>

            </tr>
            {{/each}}
        </tbody>
    </table>
    {{>footer}}
</body>

</html>